@model Budget.Models.Transaction

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@Html.ActionLink("Back to Transactions", "Index")
<div>
    <h4>Transaction</h4>
    <hr />
    <div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.BankAccount.Name)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.BankAccount.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.Category.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.User.DisplayName)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.User.DisplayName)
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    <span>Transaction Type</span>
                </label>
            </div>

            <div class="col-md-7">
                @if(Model.IsWithdrawl == true) {
                    <span>Withdrawl</span>
                }
                else {
                    <span>Deposit</span>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.DateCreated)
            </div>
        </div>
        @if(Model.DateEdited != null) { 
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.DateEdited)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.DateEdited)
            </div>
        </div>
        }
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.TransactionAmount)
                </label>
            </div>

            <div class="col-md-7">
                <span>$ </span>@Html.DisplayFor(model => model.TransactionAmount)
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.ReconsiliationAmount)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.ReconsiliationAmount)
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 text-right">
                <label>
                    @Html.DisplayNameFor(model => model.TransactionDescription)
                </label>
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.TransactionDescription)
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-7 text-right">
            <form method="post" action="@Url.Action("Delete")" name="Delete">
                @*@using(Html.BeginForm()) {*@
                    @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-flat flat-color" />
                    </div>
                @*}*@
            </form>
        </div>
    </div>
</div>

